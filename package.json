{
  "name": "visa-ts",
  "version": "1.0.0",
  "description": "TypeScript VISA library for instrument communication",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./sessions": {
      "types": "./dist/sessions/index.d.ts",
      "import": "./dist/sessions/index.js"
    },
    "./simulation": {
      "types": "./dist/simulation/index.d.ts",
      "import": "./dist/simulation/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "examples": "tsx examples/psu-basic.ts && tsx examples/load-basic.ts && tsx examples/power-test.ts",
    "test:ci": "npm run typecheck && npm run format:check && npm run lint && npm run test:run && npm run examples",
    "prepare": "husky",
    "prepublishOnly": "npm run test:ci && npm run build"
  },
  "keywords": [
    "visa",
    "scpi",
    "usbtmc",
    "lxi",
    "test-equipment",
    "instruments",
    "gpib"
  ],
  "author": "jvanderberg",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jvanderberg/visa-ts.git"
  },
  "homepage": "https://github.com/jvanderberg/visa-ts#readme",
  "bugs": {
    "url": "https://github.com/jvanderberg/visa-ts/issues"
  },
  "dependencies": {
    "serialport": "^12.0.0",
    "usb": "^2.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
